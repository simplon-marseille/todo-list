<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link rel="stylesheet" href="public/style.css">
  <title>Todo list</title>
</head>
<body>
  <div class="todolist">
    <form class="form-inline" method="post", action="/">
      <div class="form-group">
        <input type="text" class="form-control" id="task" name="name" placeholder="Fais toi plaisir !">
      </div>
      <div class="form-group">
        <input type="date" class="form-control" id="date" name="date" placeholder="date de la tâche">
      </div>
      <button id="bouton" type="submit" class="btn btn-default">Envoyé</button>
    </form>
  <div class="list-group">
     <% allTasks.forEach((task) => { %>
      <button type="button" class="list-group-item" id="<%= task.id %>"><%= task.name.toUpperCase() %> programmée pour <%= task.todo_date.toDateString() %> <a id="taskId" class="pull-right" href="/delete/<%= task.id %>">Supprimer</a></button>
    <% }) %>
</div>
  </div>
  <script type='text/javascript' src="public/check.js"></script>
  <script type="text/javascript" src="public/ajax.js"></script>
</body>
</html>
